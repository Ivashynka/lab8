Procedure Vvod_i_Proverka(CurrNumber2:integer);
begin
  read(CurrNumber2);
  while (CurrNumber2>9) or (CurrNumber2<1) do
    begin
      writeln('Введите число из заданного диапазона');
      readln(CurrNumber2);
    end;
  writeln('Введенное игроком число-',CurrNumber2);
end;

