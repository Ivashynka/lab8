program lab8;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

type tmas=array[1..1000] of integer;
TMasScore=array[1..5] of integer;

var
Mas:Tmas;
MasScore:TMasScore;
i,Score,N:integer;

Procedure VvodChisla_Proverka(CurrNumber:integer);
begin
  Writeln('Введите число от 1 до 9');
  readln(CurrNumber);
  if (CurrNumber>9) or (CurrNumber<1) then
    Begin
      writeln('Введите число из диапазона')
      readln(CurrNumber);
    End;
end;

begin
  randomize;
  Score:=random(50)+900;
  writeln('Начальное число-',Score);
  Write('Количество игроков-');
  readln(N);
  Readln;

end.
